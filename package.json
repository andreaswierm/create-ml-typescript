{
  "name": "root",
  "private": true,
  "workspaces": ["packages/*", "tools/*"],
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.5.4",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "test": "jest",
    "test-ci": "jest --ci --coverage",
    "start": "lerna run start --parallel --scope @create-ml-typescript/scripts",
    "prepare": "husky install",
    "lint": "eslint \"packages/**/{src,__tests__}/**/*.ts\"",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --ext js,jsx,ts,tsx --fix",
      "prettier --write"
    ]
  }
}
